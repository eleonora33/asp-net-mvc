@model List<Burger>
<partial name="~/Views/Shared/Partials/_BurgerGreetingPartial.cshtml" />

<h2>Burger -> Index</h2>

<p>@DateTime.Now</p>

<a asp-controller="Burger" asp-action="CreateBurger">Create burger</a>
<ol>
	@for (int i = 0; i < @Model.Count; i++)
	{
		<li>
			<a asp-controller="Burger" asp-action="Details" asp-route-id="@Model[i].Id">See details</a>
			<a asp-controller="Burger" asp-action="EditBurger" asp-route-id="@Model[i].Id">Edit</a>
			<a asp-controller="Burger" asp-action="DeleteBurger" asp-route-id="@Model[i].Id">Delete</a>
		</li>
	}
</ol>
